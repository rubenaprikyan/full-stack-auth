{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "esModuleInterop": true,
      "target": "es5",
      "module": "ESNext",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
   },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}